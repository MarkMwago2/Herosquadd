{{#partial "content"}}


<div class="container">


<form action="/squads" method="post">


   <div class="form-group">
     <label for="name">Squad name</label>
     <select id="name" name="name"  class="form-control">
         <option value="Ninjas">Top Ninjas</option>
         <option value="DC">Super Ninjas</option>
    </select>
   </div>

   <div class="form-group">
     <label for="size">Squad size</label>
     <input id="size" name="size" type="number" class="form-control">
   </div>

   <div class="form-group">
     <label for="cause">Squad cause</label>
     <input id="cause" name="cause" type="text" class="form-control">
   </div>

    <div class="form-group">
        <label for="cause">Add hero</label>
        <input id="hero" name="cause" type="text" class="form-control">
    </div>

       <div class="form-group">
   <button type="submit" class="btn">Add Squad</button>
     </div>

 </form>
</div>
{{/partial}}

